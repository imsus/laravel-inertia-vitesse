{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "paths": {
      "~/*": [
        "resources/*"
      ],
      "@/*": [
        "resources/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext",
    "types": [
      "node",
      "vitest",
      "vite/client",
      "vue/ref-macros",
      "unplugin-vue-define-options"
    ]
  },
  "exclude": [
    "public",
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "resources/**/*"
  ]
}
